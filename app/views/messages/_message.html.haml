.chat_main__message_list{data: {message: {id: message.id}}}
  .chat_main__message_list__message
    .chat_main__message_list__message__info
      .chat_main__message_list__message__info__name
        = message.user.name
      .chat_main__message_list__message__info__timestamp
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .chat_main__message_list__message__text
      - if message.content.present?
        %p.Message__content
          = message.content
      = image_tag message.image.url, class: 'chat_main__message_list__message__text__image' if message.image.present?   

        